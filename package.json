{
  "name": "tracr.io",
  "version": "0.1.0",
  "description": "An app for tracking lost items",
  "private": true,
  "proxy": "http://localhost:3000",
  "keywords": [],
  "author": "",
  "scripts": {
    "dev": "concurrently \"npm run next\" \"wait-on http://localhost:3000 && electron .\"",
    "next": "next dev",
    "build": "next build && next export",
    "start": "electron .",
    "lint": "next lint",
    "prep": "prettier --config .prettierrc ./**/*.ts* --write && eslint . --ext .ts & eslint . --ext .tsx",
    "lint-fix": "eslint . --ext .ts --fix && eslint . --ext .tsx --fix",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts* --write",
    "start-api": "node dist/api/index.js",
    "start-api-dev": "npx ts-node api/index.ts",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@mui/material": "^5.16.4",
    "@mui/x-date-pickers": "^7.11.0",
    "@prisma/client": "^5.15.0",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "electron-is-dev": "^3.0.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.77.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jwt-decode": "^3.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "concurrently": "^8.0.1",
    "electron": "^30.0.8",
    "electron-builder": "^24.6.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.ts",
  "build": {
    "appId": "com.example.tracr.io",
    "files": [
      "out/**/*",
      "electron/main.ts",
      "electron/preload.ts"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
